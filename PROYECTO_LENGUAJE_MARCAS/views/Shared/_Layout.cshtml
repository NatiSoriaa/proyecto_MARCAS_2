<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PROYECTO_LENGUAJE_MARCAS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PROYECTO_LENGUAJE_MARCAS.styles.css" asp-append-version="true" />

    <style>
        #carouselExampleSlidesOnly {
            text-align: center;
        }

        .carousel-item img {
            display: inline-block;
        }

        
        .navbar-brand {
            font-size: 24px; 
        }

        .navbar-nav .nav-link {
            color: #333; 
            font-size: 18px; 
        }

        .navbar-nav .nav-link:hover {
            color: #284768; 
        }
    </style>

</head>
<style>
    .navbar{
        margin-bottom: 0;
        background:rgba(14, 66, 106);
    }
    .carousel{
        margin-top: -2%;
        z-index:1000;
        background: linear-gradient(to bottom, rgba(14, 66, 106, 1), rgba(0, 0, 255, 0));
        margin: 0;
        backdrop-filter: blur(3px);
        text-align: center;
        align-items: center;    
        z-index:1000;
        height: fit-content;

    }
    .footer {
        position: relative bottom;
        bottom: 0;
        width: 100%;
        height: 20px; 
        background-color: #033256;
        color:rgb(189, 210, 213);
        text-align: center;     
        z-index:1000;
        height: fit-content;
    }
</style>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm ">
            <div class="container-fluid">
                <a class="navbar-brand">WEATHER CHECK</a>
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
                    </li>
                </ul>
                
            </div>
        </nav>
        <div  class="carousel slide" data-ride="carousel" >
            <p ><img src="@Url.Content("~/Content/Images/mundo.gif")" height="150px" width="200px" alt="First slide" style="margin-top: 3%;"></p>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" >
        
        &copy; <a style="color:rgb(189, 210, 213); font-weight:bolder;">2024 - NAT'S PROYECT -</a> <a asp-area="" asp-controller="Home" asp-action="Privacy" style="color:rgb(189, 210, 213);">Privacy</a>
        
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
