@model IEnumerable<PROYECTO_LENGUAJE_MARCAS.Controllers.HomeController.CountriesID>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-image: url("https://e1.pxfuel.com/desktop-wallpaper/119/407/desktop-wallpaper-3d-world-map-best-of-map-of-the-world-best-world-map.jpg");
            background-repeat: no-repeat;
            background-position: center;
            background-size: auto;
            margin: 0;
            backdrop-filter: blur(5px);
        }

        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
            background-color: #215f7c;
        }
        
        li {
            float: left;
        }
        
        li a {
            display: block;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }
        
        li a:hover {
            background-color: #111;
        }

        .flip-card {
            background-color: transparent;
            width: 300px;
            height: 200px;
            padding: 10px;
            perspective: 1000px;
        }

        .flip-card-inner {
            position: relative;
            width: 100%;
            height: 100%;
            text-align: center;
            transition: transform 0.8s;
            transform-style: preserve-3d;
        }

        .flip-card:hover .flip-card-inner {
            transform: rotateY(180deg);
        }

        .flip-card-front, .flip-card-back {
            position: absolute;
            width: 100%;
            height: 100%;
            -webkit-backface-visibility: hidden;
            backface-visibility: hidden;
        }

        .flip-card-front {
            background-color: #bbb;
            color: black;
        }

        .flip-card-back {
            background-color: #215f7c;
            color: white;
            transform: rotateY(180deg);
            justify-content: center;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        a.button {
            background-color: #ffffff;
            color: rgb(0, 0, 0);
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
            text-decoration: none; 
        }

        a.button:hover {
            background-color: #e0e0e0; 
        }

        .main {
            display: flex;
            justify-content: center;
        }

        .container {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 15px;
            padding: 30px;
        }

        .row {
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: center;
            flex-wrap: wrap;
            gap: 15px;
        }
    </style>
</head>
<body>
    <main class="container">
        @foreach (var country in Model)
        {
            <div class="row">
                <div class="flip-card">
                    <div class="flip-card-inner">
                        <div class="flip-card-front">
                            <img src="@country.urlImagen" alt="Avatar" style="width:100%;height:100%;">
                        </div>
                        <div class="flip-card-back">
                            <h1>@country.countryName</h1>
                            <p>@country.capitalCountry</p>
                            <a href="..." class="button">Consultar</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </main>
</body>
</html>
