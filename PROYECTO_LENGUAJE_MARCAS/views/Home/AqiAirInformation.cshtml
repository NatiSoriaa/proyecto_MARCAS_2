@using PROYECTO_LENGUAJE_MARCAS.Models
@{
    ViewData["Title"] = "Aqi Information";
 
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <style>
        
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            background-image: url('@Url.Content("~/Content/Images/hojasCayendo.gif")');
        }

        main {
            flex: 1; 
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: rgba(240, 248, 255, 0.7);
            border-radius: 5%;
            padding: 20px;
            max-width: 90%;
            min-width: 80%;
            margin: auto;
            margin-top: 10px;
        }

        .container {
            width: 100%;
        }

        .currentCityBox {
            border-radius: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            height: fit-content;
            width: 100%;
            padding: 20px;
            margin-bottom: 5px; 
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
        }
        

        .container {
            width: 100%;
        }
        
        .leftSpan {
            align-items: center;
            flex: 1;
            font-size: xx-large;
            font-weight: bolder;
            text-align: center;
        }

        .rightSpan {
            flex: 1;
            display: flex;
            justify-content: flex-end;
        }

        .currentInformation {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;   
            margin-top: 5%;  
        }
        

        .currentInformation span {
            flex-basis: 45%;
            display:flex;
            flex-direction: column;
            align-items: left;
            
        }


        .information{
            font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
            font-size: 40px;
            text-align:left;
            background: linear-gradient(to right, #085409, #085409, #058b08);
            background-size: cover;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .data{
            font-size: 25px;
            font-weight: bolder;
            margin-left: 10%;
        }

        .qualityAir {
            margin: 100px auto;
            width: 80%;
            height: fit-content;
            background-repeat: no-repeat;
            background-size: cover;
            border-radius: 50px;
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
            overflow: hidden;
            color:rgb(1, 40, 20);
            font-size: large;
            font-weight: bolder;
            
        }

        .qualityText{
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
            font-size: 35px;
            font-weight: bolder;
            background: linear-gradient(to right, #085409, #085409, #058b08);
            background-size: cover;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            -webkit-text-stroke: 1px rgb(253, 239, 239);
        }

        

        footer{
            width: 100%;
            text-align: center;
            padding: 10px 0;
            margin-top: 5%;
        }

    
    </style>

</head>

<body>
    <main class="main">


        @if (Model != null && Model.Count > 0)
        {
            var aqiModel = Model[0];

            if (aqiModel.data != null && aqiModel.data.Count > 0)
            {
                foreach (var datum in aqiModel.data)
                {
                    <div class="container">
                        @if (datum.aqi > 100)
                        {
                            <div class="qualityAir" style="background-image: url('@Url.Content("~/Content/Images/iconWeather/qualityAirBAD.png")');">
                                <p class="qualityText" style="margin-left:0.5%">QUALITY AIR : @datum.aqi ICA</p>
                                <img src="@Url.Content("~/Content/Images/iconWeather/airBAD.png")" height="120px" width="140px" style="margin-left:0.5%" alt="First slide">
                            </div>
                        }
                        else if (datum.aqi > 60)
                        {
                            <div class="qualityAir" style="background-image: url('@Url.Content("~/Content/Images/iconWeather/qualityAirOK.jpg")');">
                                <p class="qualityText" style="margin-left:0.5%">QUALITY AIR : @datum.aqi ICA</p>
                                <img src="@Url.Content("~/Content/Images/iconWeather/airOK.png")" height="120px" width="140px" style="margin-left:0.5%" alt="First slide">
                            </div>
                        }
                        else if (datum.aqi < 60)
                        {
                            <div class="qualityAir" style="background-image: url('@Url.Content("~/Content/Images/iconWeather/qualityAirGOOD.jpg")');">
                                <p class="qualityText" style="margin-left:0.5%">QUALITY AIR : @datum.aqi ICA</p>
                                <img src="@Url.Content("~/Content/Images/iconWeather/airGOOD.png")" height="120px" width="140px" style="margin-left:0.5%" alt="First slide">
                            </div>
                        }
                        <div class="currentCityBox">
                            <div class="leftSpan">
                                <h1 style="font-weight: bolder; font-size:40px;">@aqiModel.city_name</h1>
                            </div>
                        </div>
                        <div class="currentInformation" style="margin-left:5%;">
                            <span>
                                <div><p class="information">O3: </p><p class="data">@datum.o3 %</p></div>
                                <div><p class="information">SO2: </p><p class="data">@datum.so2 mm/hr</p></div>         
                                <div><p class="information">NO2: </p><p class="data">@datum.no2 mm/hr</p></div>
                                <div><p class="information">CO: </p><p class="data">@datum.co %</p></div>
                                <div><p class="information">PM10: </p><p class="data">@datum.pm10 mm/hr</p></div>         
                                <div><p class="information">PM25: </p><p class="data">@datum.pm25 mm/hr</p></div>
                            </span>
                            <span>
                                <div><p class="information">TREE POLLEN: </p><p class="data">@datum.pollen_level_tree </p></div>
                                <div><p class="information">GRASS POLLEN: </p><p class="data">@datum.pollen_level_grass m/s</p> </div>
                                <div><p class="information">WEED POLLEN: </p><p class="data">@datum.pollen_level_weed %</p></div>   
                                <div><p class="information">MOLD POLLEN: </p><p class="data">@datum.mold_level m/s</p> </div>
                                <div><p class="information">PREDOMINANT POLLEN: </p><p class="data">@datum.predominant_pollen_type %</p></div>              
                            </span>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>No se encontraron datos de calidad del aire.</p>
            }
        }
        else
        {
            <p>No se encontraron datos.</p>
        }
    </main>

    

</body>
</html>